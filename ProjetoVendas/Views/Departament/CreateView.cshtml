@model ProjetoVendas.Models.Departament.DepartamentModel

@{
    ViewData["Title"] = "Adicionar Departamento";
}

<h4>@ViewData["Title"]</h4>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Informe o Nome</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Cadastrar" class="btn btn-success fw-bold" />
                    <a class="btn btn-info fw-bold" asp-action="Index">Voltar</a>
                </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    $('.form-group :input:first').focus();
</script>