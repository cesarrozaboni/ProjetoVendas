@using ProjetoVendas.Models.Departament;

@model IEnumerable<DepartamentModel>

@{
    ViewData["Title"] = "Departamentos";
}

<h4>Lista de Departamentos</h4>

<table class="table table-striped table-hover">
    <thead>
        <tr class="info text-white">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Editar", "EditView", new {  id = item.Id }, new{ @class = "btn btn-sm btn-warning" })
                    @Html.ActionLink("Detalhes", "DetailsView", new {  id = item.Id }, new{ @class = "btn btn-sm btn-secondary" })
                    @Html.ActionLink("Excluir", "DeleteView", new {  id = item.Id }, new{ @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a class="btn btn-info fw-bold" asp-action="CreateView">Novo Departamento</a>
</p>