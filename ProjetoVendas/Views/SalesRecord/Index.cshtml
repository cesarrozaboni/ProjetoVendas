@{
    ViewData["title"] = "Vendas";
}

<h4>@ViewData["title"]</h4>

<hr />

<div class="col-md-12">
    <div class="col-md-2">
        @Html.ActionLink("Gerar Venda","CreateView", new {} , new { @class = "btn btn-info fw-bold" })
    </div>
</div>

<br />
<br />

<hr />

<div class=row>
        
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SimpleSearch">
            <fieldset>
                <legend>Consulta Simples</legend>
                
                    <div class="form-group">
                        <label for="minDate" class="col-lg-2 control-label">Data De</label>
                        <div class="col-lg-10">
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="maxDate" class="col-lg-2 control-label">Data Ate</label>
                        <div class="col-lg-10">
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-primary">Pesquisar</button>
                        </div>
                    </div>
                
            </fieldset>
        </form>
    </div>
</div>

<div class=row>
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="GroupingSearch">
            <fieldset>
                <legend>Consulta Agrupada</legend>

                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Data De</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Data Ate</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Pesquisar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>