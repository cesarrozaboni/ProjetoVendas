@using Domain.Seller
@model IEnumerable<SellerModel>

@{
    ViewData["Title"] = "Vendedores";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Adicionar</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-primary">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
                <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
                <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
                <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Email)
                </td>
                   <td>
                    @Html.DisplayFor(model => item.BirthDate)
                </td>
                   <td>
                    @Html.DisplayFor(model => item.BaseSalary)
                </td>
                <td>
                    <a asp-action="EditView" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="DetailsView" asp-route-id="@item.Id">Detalhes</a>
                    <a asp-action="DeleteView" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>