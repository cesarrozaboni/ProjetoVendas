@using Domain.Seller
@model IEnumerable<SellerModel>

@{
    ViewData["Title"] = "Lista de Vendedores";
}

<h4>@ViewData["Title"]</h4>

<table class="table table-striped table-hover">
    <thead>
        <tr class="info">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
                <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
                <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
                <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Email)
                </td>
                   <td>
                    @Html.DisplayFor(model => item.BirthDate)
                </td>
                   <td>
                    @Html.DisplayFor(model => item.BaseSalary)
                </td>
                <td>
                    <a asp-action="EditView" class="btn btn-sm btn-warning" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="DetailsView" class="btn btn-sm btn-secondary" asp-route-id="@item.Id">Detalhes</a>
                    <a asp-action="DeleteView" class="btn btn-sm btn-danger" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="CreateView" class="btn btn-info fw-bold">Novo Vendedor</a>
</p>